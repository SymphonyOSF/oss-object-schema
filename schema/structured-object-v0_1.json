{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://symphonyosf.github.io/symphony-object/schema/structured-object-v0_1.json",
    "title": "A single Symphony Structured Object",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri"
        },
        "type": {
                    "description": "The identifier of the type of this object.",
                    "title": "Object Type",
                    "type": "string"
                },
        "version": {
            "description": "The version of the type definition to which this object confirms.",
            "title": "The type version",
            "type": "string",
            "pattern": "[0-9]+\\.[0-9]+"
        },
        "id": {
            "description": "One or more identifiers for this object.",
            "title": "The object Id",
            "type": "array",
            "items": {
                "$ref": "https://symphonyosf.github.io/symphony-object/schema/definitions-v0_1.json#/org.symphonyoss.object.id"
            }
        }
    },
    "required": [
        "type",
        "version"
    ],
    "additionalProperties": true
}
